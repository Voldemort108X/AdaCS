{
    "name": "DiffuseMorph_3D",
    "phase": "test",
    "gpu_ids": [
        0
    ],
    "display_port": 8097,
    "path": {
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": "checkpoints/cardiac" //the deirectory of trained models
    },
    "datasets": {
        "centered": true,
        "test": {
            "name": "3D",
            "dataroot": "./toy_sample/3d/",
            "data_len": 3
        }
    },
    "model": {
        "netDim": 3,
        "which_model_G": "ddpm",
        "finetune_norm": false,
        "unet": {
            "in_channel": 3,
            "out_channel": 1,
            "inner_channel": 8,
            "channel_multiplier": [
                1,
                2,
                4,
                4
            ],
            "attn_res": [
                10
            ],
            "res_blocks": 1,
            "dropout": 0 //.2
        },
        "beta_schedule": {
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": [128, 128, 32],
            "conditional": true
        },
        "field": {
            "in_channel": 2,
            "encoder_nc": [16,32,32,32,32],
            "decoder_nc": [32,32,32,8,8,3]
        }
    }
}